#!ipxe
dhcp && goto netboot || goto dhcperror

:dhcperror
prompt --key s --timeout 10000 DHCP failed, hit 's' for the iPXE shell; reboot in 10 seconds && shell || reboot

:netboot
kernel http://{{.KSServerAddr}}:{{.KSServerPort}}/rhelinstaller/{{.Filename}}/rhel/images/pxeboot/vmlinuz initrd=initrd.img inst.repo=http://{{.KSServerAddr}}:{{.KSServerPort}}/rhelinstaller/{{.Filename}}/rhel devfs=nomount
initrd http://{{.KSServerAddr}}:{{.KSServerPort}}/rhelinstaller/{{.Filename}}/rhel/images/pxeboot/initrd.img
boot
